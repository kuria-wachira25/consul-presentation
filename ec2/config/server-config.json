{
  "node_name": "NODE_NAME",
  "datacenter": "demo-datacenter",
  "ui": true,
  "log_level": "INFO",
  "server": true,
  "key_file": "/etc/consul.d/server-certificate.key",
  "cert_file": "/etc/consul.d/certificate-authority.pem",
  "ca_file": "/etc/consul.d/server-certificate.pem",
  "verify_incoming": true,
  "verify_outgoing": true,
  "verify_server_hostname": true,
  "encrypt": "ENCRYPTION_KEY",
  "encrypt_verify_incoming": true,
  "encrypt_verify_outgoing": true,
  "leave_on_terminate": true,
  "data_dir": "/opt/consul/data",
  "client_addr": "0.0.0.0",
  "bind_addr": "BIND_ADDRESS",
  "advertise_addr": "ADVERTISE_ADDRESS",
  "bootstrap_expect": 3,
  "retry_join": [
    "provider=aws tag_key=Consul-Cluster-Name tag_value=demo-datacenter region=us-east-1"
  ],
  "enable_syslog": true,
  "acl": {
    "enabled": true,
    "default_policy": "allow",
    "down_policy": "extend-cache"
  },
  "performance": {
    "raft_multiplier": 1
  },
  "connect": {
    "enabled": true
  },
  "auto_encrypt": {
    "allow_tls": true
  }
}
