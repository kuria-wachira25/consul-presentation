[Unit]
Description="Consul Service"
Requires=network-online.target
After=network-online.target
ConditionFileNotEmpty=/etc/consul.d/consul/client-config.json

[Service]
Type=notify
User=consul
Group=consul
ExecStart=/usr/bin/consul agent -config-file=/etc/consul.d/consul/client-config.json
ExecReload=/usr/bin/consul reload
KillMode=process
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target